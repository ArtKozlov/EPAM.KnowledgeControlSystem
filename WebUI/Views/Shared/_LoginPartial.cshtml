@using Microsoft.Ajax.Utilities
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@User.Identity.Name.SubstringUpToFirst('@')<span class="caret"></span></a>
                <ul class="dropdown-menu">
                    <li>
                        @Html.ActionLink("My profile", "Information", "Profile" )
                    </li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admin room", "UsersEdit", "Admin")</li>
                    }
                    @if (User.IsInRole("Moderator"))
                    {
                        <li>@Html.ActionLink("Moderator room", "TestEdit", "Test")</li>
                    }
                    <li>
                        @Html.ActionLink("Settings", "Settings", "Profile")
                    </li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
            @*@if (User.IsInRole("Admin"))
            {
                <li>@Html.ActionLink("Users edit", "UsersEdit", "Admin")</li>
            }
            <li>
                @Html.ActionLink("Your Profile", "ProfileInfo", "Profile", routeValues: null, htmlAttributes: new {title = "Manage"})
            </li>*@
            @*<li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>*@
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new {id = "loginLink"})</li>
        <li>@Html.ActionLink("Register", "Register", "Account")</li>
    </ul>
}
