@using WebUI.Helpers
@model IEnumerable<WebUI.ViewModels.UserViewModel>
@{
    ViewBag.Title = "Admin room";
}
<div id="usersEditor">
    <h1>Admin room</h1>
    <div>
        <h3>Search:</h3>
        @using (Ajax.BeginForm("UsersEditor", new { page = 1 }, new AjaxOptions { UpdateTargetId = "usersEditor" }))
        {
            <input type="text" name="name" />
            <input type="submit" value="Поиск" />
        }
    </div>

    <table class="table" id="deletedUser">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Roles)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    @foreach (var elem in item.Roles)
                {
                        @Html.DisplayFor(modelItem => elem.Name)
                        <br />
                    }
                </td>
                <td>
                    @Html.ActionLink("Edit", "EditUser", new { email = item.Email }) |
                    @Ajax.ActionLink("Delete", "DeleteUser", new { id = item.Id},
                    new AjaxOptions { Confirm = "Do you want delete '" + item.Name + "'?", UpdateTargetId = "usersEditor" })
                </td>
            </tr>
        }

    </table>
</div>
@Scripts.Render("~/scripts/jquery-1.10.2.min.js")
@Scripts.Render("~/scripts/jquery.unobtrusive-ajax.min.js")